<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--스누맵 맨 위 탑바 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/topbar"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btn_menu"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/button_image_menu"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <!--탑 바 제외 아래 전체 포함하는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#b2dfdb"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <com.snumap.snumapversion1.CustomAutoCompleteView
                            android:id="@+id/myAutoComplete"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:maxLines="1"
                            android:completionThreshold="1"
                            android:hint="강의동(명) 검색"
                            android:textColorHint="#808080"
                            android:textSize="20sp"
                            android:completionHint="목록에서 원하는 곳을 탭하세요"
                            android:background="@drawable/bg_my_info_input_field"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="13dp"
                            android:visibility="visible"
                            />

                        <LinearLayout
                            android:id="@+id/search_route"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/txt_start"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/bg_my_info_input_field"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:paddingLeft="13dp"
                                android:text="    출발지"/>

                            <ImageView
                                android:src="@drawable/ic_action"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:layout_marginTop="5dp"
                                android:scaleType="centerCrop"/>

                            <EditText
                                android:id="@+id/txt_end"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/bg_my_info_input_field"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="13dp"
                                android:text="    도착지"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <WebView
                                android:id="@+id/map_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                />

                            <ImageView
                                android:id="@+id/currentPostion"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/currentposbutton"
                                android:clickable="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <!-- Bottom bar -->
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_height="70dip"
                                android:alpha="0.9"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:id="@+id/list_menu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    >

                                    <LinearLayout
                                        android:id="@+id/start_position"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/border">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#ffffff"
                                                android:text="출발지로"
                                                android:layout_centerInParent="true"
                                                />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/finish_position"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/border">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#ffffff"
                                                android:text="도착지로"
                                                android:layout_centerInParent="true"
                                                />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/favorite"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/border">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#ffffff"
                                                android:text="즐겨찾기"
                                                android:layout_centerInParent="true"
                                                />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/link"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/border">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#ffffff"
                                                android:text="공유하기"
                                                android:layout_centerInParent="true"
                                                />
                                        </RelativeLayout>
                                    </LinearLayout>

                                </LinearLayout>



                            </RelativeLayout>
                        </RelativeLayout>

                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>


            <!--드로워 레이아웃 슬라이딩 되는 부분-->
            <LinearLayout
                android:id="@+id/drawer"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:visibility="invisible"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        >
                        <ListView
                            android:id="@+id/drawerlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#60000000"
                            />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameForClose"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">

                </FrameLayout>
            </LinearLayout>


        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>

</LinearLayout>
