<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--스누맵 맨 위 탑바 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/topbar"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btn_menuSR"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/button_image_menu"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <!--탑 바 제외 아래 전체 포함하는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >
        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/drawer_layoutSR"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#b2dfdb">

                    <ImageView
                        android:id="@+id/imgChange"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/searchchange"
                        android:layout_marginLeft="8dp"
                        android:clickable="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.snumap.snumapversion1.CustomAutoCompleteView
                            android:id="@+id/myAutoCompleteSR"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:completionThreshold="1"
                            android:hint="출발지 검색"
                            android:textColorHint="#808080"
                            android:textSize="20sp"
                            android:completionHint="목록에서 원하는 곳을 탭하세요"
                            android:background="@drawable/bg_my_info_input_field"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="13dp"
                            android:visibility="visible"
                            />
                        <com.snumap.snumapversion1.CustomAutoCompleteView
                            android:id="@+id/myAutoCompleteSR2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:completionThreshold="1"
                            android:hint="도착지 검색"
                            android:textColorHint="#808080"
                            android:textSize="20sp"
                            android:completionHint="목록에서 원하는 곳을 탭하세요"
                            android:background="@drawable/bg_my_info_input_field"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="13dp"
                            android:visibility="visible"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9">

                        <!--리스트 뷰가 들어가는 부분-->
                        <ListView
                            android:id="@+id/listSR"
                            android:background="#00ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:dividerHeight="0.1dp"
                            android:divider="#A5000000"/>

                        <TextView
                            android:id="@+id/txtForNothingExistSR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="최근검색 기록이 없습니다"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:visibility="gone"
                            android:src="@drawable/ic_done"
                            app:fabSize="normal"
                            />

                    </FrameLayout>
                    <TextView
                        android:id="@+id/txtDelete"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>


            <!--드로워 레이아웃 슬라이딩 되는 부분-->
            <LinearLayout
                android:id="@+id/drawerSR"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:visibility="invisible"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        >
                        <ListView
                            android:id="@+id/drawerlistSR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#60000000"
                            />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameForCloseSR"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">

                </FrameLayout>
            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>

</LinearLayout>
