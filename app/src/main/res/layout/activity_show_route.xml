<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--스누맵 맨 위 탑바 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/topbar"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btn_menuFR"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/button_image_menu"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <!--탑 바 제외 아래 전체 포함하는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#b2dfdb">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            >

                            <TextView
                                android:id="@+id/fromSR"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="출발지"/>

                            <ImageView
                                android:src="@drawable/arrow_forward"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                />

                            <TextView
                                android:id="@+id/toSR"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="도착지"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <WebView
                                android:id="@+id/map_viewSR"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                />
                        </RelativeLayout>

                        <!-- Bottom bar -->
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_height="70dp"
                                android:alpha="0.9"
                                android:background="#ffffff">
                                <TextView
                                    android:id="@+id/prospectTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


            <!--드로워 레이아웃 슬라이딩 되는 부분-->
            <LinearLayout
                android:id="@+id/drawerFR"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:visibility="invisible"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        >
                        <ListView
                            android:id="@+id/drawerlistFR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#60000000"
                            />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameForCloseFR"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent">
                </FrameLayout>
            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>
</LinearLayout>
